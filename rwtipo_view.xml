<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="sala_tipo_report_wizard" model="ir.ui.view" >
        <field name="name">sala.tipo.report.wizard.form</field>
        <field name="model">sala.tipo.report.wizard</field>
        <field name="arch" type="xml">
            <form string="Sale Summary Report">
                <group>
                    <group>
                        <field name="date_start"/>
                    </group>
                    <group>
                        <field name="date_end"/>
                    </group>
                    <group>
                        <field name="tipo_id"/>
                    </group>
                </group>

                <footer>
                    <button name="get_report" string="Generar Reporte" type="object" class="oe_highlight"/>
                    <button string="Cancelar" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_sala_tipo_report_wizard" model="ir.actions.act_window">
                <field name="name">Reporte por tipo de acci√≤n</field>
                <field name="res_model">sala.tipo.report.wizard</field>
                <field name="view_mode">form</field>
                <field name="target">new</field>
    </record>

    <menuitem id="menu_sala_tipo_report_wizard" 
        name="Reporte de acciones por tipo" 
        parent="menu_informe_root" 
        action="action_sala_tipo_report_wizard" 
        sequence="5"/>

</odoo>
