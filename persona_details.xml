<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="report_persona_details">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">

                <t t-call="web.external_layout">
                   <div class="page">
                        <div class="text-center">
                             <span> <strong > DIRECCIÓN DEL PODER POPULAR - SALA SITUACIONAL - FICHA DE LIDER</strong> </span> 
                        </div>
                        <div class="oe_structure"/>
                        
                            <div class="row">
                           
                                    <table class="table table-condensed" style="border: 1px solid black ;">
                                        <tr>
                                            <td width="40%">
                                                <p style="text-align:center;padding-top:10px;">
                                                    <img t-if="not o.image"
                                                        t-att-src="'/web/static/src/img/placeholder.png'" height="140"
                                                        border="1" width="120"/>
                                                    <img t-if="o.image"
                                                        t-att-src="'data:image/png;base64,%s' % to_text(o.image)"
                                                        height="140" border="1" width="120"/>
                                                </p>
                                            </td>
                                            <td width="60%">
                                                <table>
                                                    <tr>
                                                        <td class="text-center">
                                                            <span t-field="o.nombre"/> <span> <strong>,</strong> </span> <span t-field="o.apellido"/>
                                                        </td>
                                                    </tr>
                                                    <tr>
                                                        <td >
                                                            <span>
                                                                <strong>Nro. Cédula:</strong> <span t-field="o.cedula_id"/>
                                                            </span>
                                                        </td>
                                                        
                                                    </tr>
                                                    <tr>
                                                        <td>
                                                            <span>
                                                                <strong>Clasificación:</strong> <span t-field="o.clasificacion"/>
                                                            </span>
                                                        </td>
                                                       
                                                    </tr>
                                                    
                                                </table>
                                            </td>
                                        </tr>
                                    </table>
                            </div> 
                            <br/>   
                            <div>
                                    <table class="table table-sm o_main_table" name="appointment">

                                        <thead>

                                                <tr>

                                                    <th colspan="2" class="text-center">DATOS PERSONALES</th>

                                                </tr>
                                        </thead>
 
                                            <tr>
                                                <td > Nombre </td>
                                                <td> <span t-field="o.nombre"/>  <span> <strong>,</strong> </span> <span t-field="o.apellido"/> </td>
                                            </tr>
                                            <tr>
                                                <td > Fecha de Nac.</td>
                                                <td> <span t-field="o.fecha_nac"/> </td>
                                            </tr>
                                            <tr>
                                                <td > Comunidad </td>
                                                <td> <span t-field="o.direccion_id"/> </td>
                                            </tr><tr>
                                                <td > Territorio </td>
                                                <td> <span t-field="o.territorio_id"/> </td>
                                            </tr>

                                            <tr>
                                                <td > Calle</td>
                                                <td> <span t-field="o.calle_id"/> </td>
                                            </tr>
                                            <tr>
                                                <td > Casa #</td>
                                                <td> <span t-field="o.casa"/> </td>
                                            </tr>
                                            <tr>
                                                <td > Teléfono Móvil </td>
                                                <td> <span t-field="o.telefono_movil"/> </td>
                                            </tr>
                                            <tr>
                                                <td > Teléfono Fijo </td>
                                                <td> <span t-field="o.telefono_fijo"/> </td>
                                            </tr>
                                               <tr>
                                                   <th colspan="2" class="text-center">DATOS DEL TRABAJO</th>
                                               </tr>
                                               <tr>
                                                    <td > Grado Estudio</td>
                                                    <td> <span t-field="o.gradoestudio"/> </td>
                                               </tr>
                                                <tr>
                                                    <td > Trabaja </td>
                                                    <t t-if="o.istrabaja">  <td> <span>SI</span> </td> </t>                                                   
                                               </tr>

 
                                               <tr>
                                                    <td > Oficio </td>
                                                    <td> <span t-field="o.oficio"/> </td>
                                               </tr>
 
                                               <tr>
                                                   <th colspan="2" class="text-center">REDES SOCIALES</th>
                                               </tr>
                                                <tr>
                                                    <td > E-mail </td>
                                                    <td> <span t-field="o.email"/> </td>
                                                </tr>
                                                <tr>
                                                    <td > Facebook </td>
                                                    <td> <span t-field="o.reds_fa"/> </td>
                                                </tr>
                                                 <tr>
                                                    <td > Twitter </td>
                                                    <td> <span t-field="o.reds_tw"/> </td>
                                                </tr>
                                                 <tr>
                                                    <td > Intagram </td>
                                                    <td> <span t-field="o.reds_in"/> </td>
                                                </tr>
                                                 <tr>
                                                    <td > Telegram </td>
                                                    <td> <span t-field="o.reds_tl"/> </td>
                                                </tr>
                                                <tr>
                                                   <th colspan="2" class="text-center">CasaXCasa</th>
                                                </tr>
                                                <tr>
                                                    <td > Jefe familia </td>
                                                     <t t-if="o.is_jefe">  <td> <span>SI</span> </td> </t>                                                   
                                                </tr>
                                                <tr>
                                                    <td > Ha recibido la bolsa en los últimos 3 meses? </td>
                                                    <t t-if="o.is_tresmeses">  <td> <span>SI</span> </td> </t>                                                   

                                                </tr>
                                                <tr>
                                                   <td>OBSERVACIONES </td>
                                                   <td> <span t-field="o.note"/> </td>
                                               </tr>
     
                                        </table>

                            <t t-if="o.vulnera_line_ids">
                                <div class="text-center">
                                    <span> <strong > VULNERABILIDAD DETECTADAS EN EL CASAxCASA </strong> </span> 
                                </div>                        
        
                                <table class="table table-sm o_main_table" name="appointment">
                                    <thead>
                                        <tr>
                                            <th name="th_reference" class="text-center"> <span>#</span> </th>
                                            <th name="th_reference" class="text-center"> <span>Vulnerabilidad</span> </th>
                                            <th name="th_reference" class="text-center"> <span>Observación</span> </th>                                         
                                        </tr>
                                    </thead>
                                    <t t-set="contador" t-value="0"/>
                                    <t t-foreach="o.vulnera_line_ids" t-as="line">
                                        <t t-set="contador" t-value="contador + 1"/>
                                        <tr>
                                            <td class="text-right"> <t t-esc="contador"/> </td > 
                                            <td> <span t-field="line.tipov_id"/> </td>
                                            <td> <span t-field="line.note"/> </td>
                                        </tr>
                                    </t>
                                </table>
                            </t>

                            <t t-if="o.accion_ids">
                                <div class="text-center">
                                    <span> <strong > ACCIONES DE GOBIERNO </strong> </span> 
                                </div>                        
        
                                <table class="table table-sm o_main_table" name="appointment">
                                    <thead>
                                        <tr>
                                            <th name="th_reference" class="text-center"> <span>#</span> </th>
                                            <th name="th_fecha" class="text-center">     <span>Fecha apertura</span> </th>
                                            <th name="th_fechac" class="text-center">    <span>Fecha cierre</span> </th>
                                            <th name="th_reference" class="text-center"> <span>Nombre</span> </th>
                                            <th name="th_reference" class="text-center"> <span>Acción</span> </th>
                                            <th name="th_reference" class="text-center"> <span>Dirigida a:</span> </th> 
                            <th name="th_state" class="text-center">     <span>Status</span> </th>
                                        </tr>
                                    </thead>
                                    <t t-set="contador" t-value="0"/>
                                    <t t-foreach="o.accion_ids" t-as="line">
                                        <t t-set="contador" t-value="contador + 1"/>
                                        <tr>
                                            <td class="text-right"> <t t-esc="contador"/> </td> 
                                            <td> <span t-field="line.date_apertura"/> </td>
                                            <td> <span t-field="line.date_cierre"/>   </td>
                                            <td> <span t-field="line.nombre"/> </td>
                                            <td> <span t-field="line.accion_id"/> </td>
                                            <t t-if="line.activo_id">  <td> <span t-field="line.activo_id"/>  </td> </t>
                                            <t t-if="line.persona_id"> <td> <span t-field="line.persona_id"/> </td> </t>
                                            <td> <span t-field="line.state"/> </td>
                                        </tr>
                                    </t>
                                </table>
                            </t>
                                </div>
                    </div>
                    <div class="footer o_standard_footer" style="border-top: 1px solid black;">
                            <div class="row text-center">
                                <div class="col col-12 text-center">
                                    <ul class="list-inline">
                                        <li class="list-inline-item">Direcciòn de Polìticas de Innovaciòn Digital - Plataforma SIDGEM - (Página:</li>
                                        <li class="list-inline-item">
                                            <span class="page"/>
                                        </li> 
                                        <li class="list-inline-item">/</li>
                                        <li class="list-inline-item">
                                            <span class="topage"/>)
                                        </li>
                                    </ul>
                                </div>
                            </div>
                    </div>                    
 
                       
                </t>
            </t>
        </t>
    </template>

</odoo>
