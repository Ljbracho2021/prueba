<?xml version="1.0" encoding="utf-8"?>
<odoo>

<template id="sala_accion_report_view">
    <t t-call="web.html_container">
        <div class="header" style="border-bottom: 1px solid black;">

            <table class="table table-condensed" style="border: 1px solid black !important;">
                                        <tr>
                                            <td width="100%">
                                                <p style="text-align:center;padding-top:10px;">
                                                    <img src="'/web/static/src/img/cintillo.png'" height="10"
                                                        border="0" width="100"/>
                                                </p>
                                            </td>
                                            
                                        </tr>
            </table>


            <h2 class="text-center"> <span style="font-size: 18px;">DIRECCIÓN DEL PODER POPULAR - SALA SITUACIONAL INTEGRAL - MUNICIPIO PAEZ </span> </h2>
            <h2 class="text-center"> <span style="font-size: 24px;">Memoria y Cuenta </span> 
               <span style="font-size: 14px;"><strong> - Desde</strong>: <t t-esc="date_start"/> <strong>Hasta</strong>: <t t-esc="date_end"/></span>
            </h2>
        </div>
        <div class="article mt0 o_report_layout_standard">
            <table class="table table-condensed table-bordered">
                <thead>
                    <th style="width: 15%">Fecha</th>
                    <th class="text-center" style="width: 35%">Acción de gobierno</th>
                    <th class="text-center" style="width: 15%">Acción</th>                    
                    <th class="text-center" style="width: 25%">U/A</th>                    
                    <th class="text-center" style="width: 10%">Monto</th>
                </thead>
                <tbody>
                    <t t-foreach="docs" t-as="doc">
                        <tr>
                            <td><span t-esc="doc['fecha_apertura']"/></td>
                            <td class="text-left"><span t-esc="doc['nombre_accion']"/></td>
                            <td class="text-left"><span t-esc="doc['accion_id']"/></td>

                            <td class="text-left"><span t-esc="doc['unidad_id']"/></td>

                            <td class="text-right">
                                <span t-esc="doc['monto_accion']" t-options='{"widget": "monetary", "display_currency": doc["company"].currency_id}'/>
                            </td>
                        </tr>
                    </t>
                </tbody>
            </table>
        </div>
        <div class="footer o_standard_footer" style="border-top: 1px solid black;">
                            <div class="row text-center">
                                <div class="col col-12 text-center">
                                    <ul class="list-inline">
                                        <li class="list-inline-item">Direcciòn de Polìticas de Innovaciòn Digital - Plataforma SIDGEM - (Página:</li>
                                        <li class="list-inline-item">
                                            <span class="page"/>
                                        </li> 
                                        <li class="list-inline-item">/</li>
                                        <li class="list-inline-item">
                                            <span class="topage"/>)
                                        </li>
                                    </ul>
                                </div>
                            </div>
        </div>
    </t>
</template>

</odoo>